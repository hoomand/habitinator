<div class="card">
  <div class="card-header d-flex align-items-center">
    <h3 class="h4">Categories</h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Unit Type</th>
          <th>Unit Name</th>
          <th>Creation Date</th>
          <th>Last Update</th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.unit_type %></td>
            <td><%= category.unit_name %></td>
            <td><%= category.created_at_formatted %></td>
            <td><%= category.updated_at_formatted %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
