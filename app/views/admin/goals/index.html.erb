<div class="card">
  <div class="card-header d-flex align-items-center">
    <h3 class="h4">Goals</h3>
  </div>
  <div class="card-body">
    <div class="table-responsive table-striped">
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Frequency</th>
          <th>Add To Total</th>
          <th>Creation Date</th>
          <th>Last Update</th>
          <th colspan="3">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <% @goals.each do |goal| %>
          <tr>
            <td><%= link_to(goal.name, admin_goal_url(goal)) %></td>
            <td><%= goal.category.name %></td>
            <td><%= goal.frequency %></td>
            <td><%= goal.new_entry_add_to_total ? 'Yes' : 'No' %></td>
            <td><%= goal.created_at_formatted %></td>
            <td><%= goal.updated_at_formatted %></td>
            <td>
                <%= link_to(new_admin_ledger_path(goal: goal), id: "log_goal_#{goal.id}") do %>
                  <%= fa_icon 'save' %>
                <% end %>
            </td>
            <td>
              <%= link_to(edit_admin_goal_path(goal), id: "edit_goal_#{goal.id}") do %>
                <%= fa_icon 'edit' %>

              <% end %>
            </td>
            <td>
              <%= link_to(
                      admin_goal_path(goal),
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      authenticity_token: true,
                      id: "delete_goal_#{goal.id}") do %>
                <%= fa_icon 'trash' %>

              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'Add', new_admin_goal_path, class: 'btn btn-primary' %>
  </div>
</div>
