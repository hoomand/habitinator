<div class="card">
  <div class="card-header d-flex align-items-center">
    <h3 class="h4"><%= @goal.name %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive table-striped">
      <table class="table">
        <thead>
        <tr>
          <th>Date</th>
          <th>Entry</th>
        </tr>
        </thead>
        <tbody>
        <% @goal.ledgers.each do |ledger| %>
          <tr>
            <td><%= ledger.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= ledger.value %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-body">
    <% if @goal.category.unit_type == 'boolean' %>
      <%= column_chart admin_charts_goal_logs_path('daily_logged_yes_no', @goal.id) %>
    <% else %>
      <%= line_chart admin_charts_goal_logs_path('raising', @goal.id) %>
    <% end %>
  </div>
</div>
