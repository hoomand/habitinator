<div class="card">
  <div class="card-header d-flex align-items-center">
    <h3 class="h4"><%= @goal.name %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive table-striped">
      <table class="table">
        <thead>
        <tr>
          <th>Date</th>
          <th>Entry</th>
        </tr>
        </thead>
        <tbody>
        <% @goal.ledgers.each do |ledger| %>
          <tr>
            <td><%= ledger.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= ledger.value %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-body">
    <%= line_chart @goal.ledgers.group_by_day(:created_at).count %>
  </div>
</div>
