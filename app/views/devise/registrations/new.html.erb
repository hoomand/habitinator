<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
  <div>
    <h2>Signup</h2>
    <hr>
  </div>
  <div>
    <%= devise_error_messages! %>
  </div>
  <div class="form-group has-danger">
    <%= f.label(:email, 'Email', class: 'sr-only') %>
    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
      <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
      <%= f.email_field :email, class: 'form-control', autofocus: true, id: 'email', placeholder: 'you@example.com' %>
    </div>
  </div>
  <div class="form-group has-danger">
    <%= f.label(:first_name, 'First Name', class: 'sr-only') %>
    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
      <div class="input-group-addon" style="width: 2.6rem"><%= fa_icon 'user' %></div>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true, id: 'first_name', placeholder: 'John' %>
    </div>
  </div>
  <div class="form-group has-danger">
    <%= f.label(:last_name, 'Last Name', class: 'sr-only') %>
    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
      <div class="input-group-addon" style="width: 2.6rem"><%= fa_icon 'user' %></div>
      <%= f.text_field :last_name, class: 'form-control', autofocus: true, id: 'last_name', placeholder: 'Doe' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:password, 'Password', class: 'sr-only') %>
    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
      <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
      <%= f.password_field :password, class: 'form-control', autocomplete: "off", id: 'password', placeholder: 'password' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:password_confirmation, class: 'sr-only') %>
    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
      <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", id: 'password-confirm', placeholder: 'repeat password' %>
    </div>
  </div>
  <div style="padding-top: 1rem">
    <%= button_tag(class: 'btn btn-success') do %>
      <i class='fa fa-user-plus'></i> Signup
    <% end %>
  </div>
<% end %>

